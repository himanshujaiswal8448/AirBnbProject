<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h2><b> Create New Listings </b></h2>
    <br />

    <form
      method="POST"
      action="/listings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter  Title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title should be valid!</div>
      </div>

      <br />

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter  Description"
          cols="20"
          rows="3"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter short description!</div>
      </div>

      <br />

      <!-- <div class="mb-3">
        <label for="image" class="form-label">Image </label>
        <input
          name="listing[image]"
          placeholder="Enter  Image  URL/link"
          type="text"
          class="form-control"
        />
        <div class="invalid-feedback">Image should be valid!</div>
      </div> -->

      <div class="mb-3">
        <label for="image" class="form-label">Upload &nbsp; Image </label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Image should be in valid Format !</div>
      </div>

      <br />
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="Enter  Price"
            class="form-control"
            required
          />
        </div>

        <br />

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="Enter  Country"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country should be valid!</div>
        </div>
      </div>
      <br />

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Enter  Location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid!</div>
      </div>
      <br />
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
<br />
